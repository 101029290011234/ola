#                                               -*- Autoconf -*-
# Process this file with autoconf to produce a configure script.

AC_PREREQ(2.57)
AC_INIT(configure.in)
AM_CONFIG_HEADER(config.h)
AM_INIT_AUTOMAKE(lla, 0.2.1)

# Checks for programs.
AC_PROG_CC
AC_PROG_CXX
AC_PROG_CPP
AC_PROG_INSTALL
AC_PROG_LN_S
AC_PROG_MAKE_SET
AC_PROG_LIBTOOL
AC_PROG_RANLIB

# Checks for header files.
AC_HEADER_DIRENT
AC_HEADER_STDC
AC_CHECK_HEADERS([fcntl.h arpa/inet.h netinet/in.h stdint.h stdlib.h string.h sys/socket.h sys/time.h syslog.h unistd.h])

# Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_TYPE_SIZE_T
AC_HEADER_TIME
AC_HEADER_STDBOOL
AC_C_INLINE
AC_TYPE_PID_T


# Checks for library functions.
AC_PROG_GCC_TRADITIONAL
AC_FUNC_MALLOC
AC_FUNC_MEMCMP
AC_FUNC_SELECT_ARGTYPES
AC_FUNC_VPRINTF
AC_FUNC_STAT
AC_FUNC_FORK
AC_FUNC_CLOSEDIR_VOID
AC_CHECK_FUNCS([gettimeofday strdup strrchr inet_ntoa memset select socket strerror])

# check for libartnet
AC_CHECK_LIB(artnet, artnet_new,[have_artnet="yes"]) 
AM_CONDITIONAL(HAVE_ARTNET, test "${have_artnet}" = "yes")

# check for libeartnet
AC_CHECK_LIB(eartnet, eartnet_new,[have_eartnet="yes"]) 
AM_CONDITIONAL(HAVE_EARTNET, test "${have_eartnet}" = "yes")

# check for esp
AC_CHECK_LIB(espnet, espnet_new,[have_espnet="yes"])
AM_CONDITIONAL(HAVE_ESPNET, test "${have_espnet}" = "yes")

# check for shownet
AC_CHECK_LIB(shownet, shownet_new,[have_shownet="yes"])
AM_CONDITIONAL(HAVE_SHOWNET, test "${have_shownet}" = "yes")

# check for libsandnet
AC_CHECK_LIB(sandnet, sandnet_new,[have_sandnet="yes"]) 
AM_CONDITIONAL(HAVE_SANDNET, test "${have_sandnet}" = "yes")

# check for libpathport
AC_CHECK_LIB(pathport, pathport_new,[have_pathport="yes"]) 
AM_CONDITIONAL(HAVE_PATHPORT, test "${have_pathport}" = "yes")


dnl ##################################################################
dnl Check if sockaddr{} has sa_len member.
dnl
AC_CHECK_MEMBER([struct sockaddr.sa_len],
 AC_DEFINE(HAVE_SOCKADDR_SA_LEN, 1, define if socket address structures have length fields),,[
#include <sys/types.h>
#include <sys/socket.h>])

plugindir=$libdir/llad
AC_SUBST(plugindir)

LLAD_DEFINES="$CFLAGS -DPLUGIN_DIR=\\\"$plugindir\\\" "
AC_SUBST(LLAD_DEFINES)

AC_ARG_ENABLE(debug, [AS_HELP_STRING(--enable-debug,
                     [Enable debugging])], 
					 
AC_DEFINE(DEBUG, 1,[Enable debugging]) )

AC_OUTPUT( Makefile \
	   include/Makefile\
	   include/lla/Makefile\
	   include/llad/Makefile\
	   lla/Makefile		\
	   llad/Makefile \
	   plugins/Makefile \
	   plugins/artnet/Makefile	\
	   plugins/artnet/conf_msgs/Makefile	\
	   plugins/eartnet/Makefile	\
	   plugins/dummy/Makefile	\
	   plugins/espnet/Makefile	\
	   plugins/pathport/Makefile	\
	   plugins/shownet/Makefile	\
	   plugins/sandnet/Makefile	\
	   plugins/usbpro/Makefile	\
	   plugins/stageprofi/Makefile	\
	   plugins/usbpro/conf_msgs/Makefile	\
	   plugins/opendmxusb/Makefile	\
	   liblla.pc \
	   plugins/usbpro/conf_msgs/libllausbproconf.pc
	   plugins/artnet/conf_msgs/libllaartnetconf.pc
	    )
