#                                               -*- Autoconf -*-
# Process this file with autoconf to produce a configure script.

AC_PREREQ(2.57)
AC_INIT(configure.in)
AM_CONFIG_HEADER(config.h)
AM_INIT_AUTOMAKE(lla, 0.1.1)

# Checks for programs.
AC_PROG_CC
AC_PROG_CXX
AC_PROG_INSTALL
AC_PROG_LN_S
AC_PROG_MAKE_SET
AC_PROG_LIBTOOL


# Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS([endian.h ppc/endian.h arpa/inet.h netinet/in.h stdlib.h string.h sys/ioctl.h sys/socket.h unistd.h])

# Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_TYPE_SIZE_T
AC_HEADER_TIME
AC_HEADER_STDBOOL

# Checks for library functions.
AC_PROG_GCC_TRADITIONAL
AC_FUNC_MALLOC
AC_FUNC_MEMCMP
AC_FUNC_SELECT_ARGTYPES
AC_FUNC_VPRINTF
AC_CHECK_FUNCS([inet_ntoa memset select socket strerror])

# check for libartnet
AC_CHECK_LIB(artnet, artnet_new,[have_artnet="yes"]) 
AM_CONDITIONAL(HAVE_ARTNET, test "${have_artnet}" = "yes")

# check for esp
AC_CHECK_LIB(espnet, espnet_new,[have_espnet="yes"])
AM_CONDITIONAL(HAVE_ESPNET, test "${have_espnet}" = "yes")

# check for shownet
AC_CHECK_LIB(shownet, shownet_new,[have_shownet="yes"])
AM_CONDITIONAL(HAVE_SHOWNET, test "${have_shownet}" = "yes")


dnl ##################################################################
dnl Check if sockaddr{} has sa_len member.
dnl
AC_CHECK_MEMBER([struct sockaddr.sa_len],
 AC_DEFINE(HAVE_SOCKADDR_SA_LEN, 1, define if socket address structures have length fields),,[
#include <sys/types.h>
#include <sys/socket.h>])

plugindir=$libdir/llad
AC_SUBST(plugindir)

LLAD_DEFINES="$CFLAGS -DPLUGIN_DIR=\\\"$plugindir\\\" "

AC_SUBST(LLAD_DEFINES)

AC_OUTPUT( Makefile \
	   llad/Makefile \
	   plugins/Makefile \
	   lla/Makefile		\
	   plugins/artnet/Makefile	\
	   plugins/dummy/Makefile	\
	   plugins/opendmxusb/Makefile	\
	   plugins/espnet/Makefile	\
	   plugins/shownet/Makefile	\
	   liblla.pc
	    )
